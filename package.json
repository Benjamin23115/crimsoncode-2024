{
	"name": "Tuff2DBug",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"start": "npm install && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"move-pdf-js":"node move-pdf-js.js"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "2.8.0",
		"@skeletonlabs/tw-plugin": "0.3.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/node": "20.11.19",
		"autoprefixer": "10.4.17",
		"postcss": "8.4.35",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-plugin-tailwind-purgecss": "0.2.0"
	},
	"type": "module",
	"dependencies": {
		"@pdftron/pdfjs-express": "^8.7.4"
	},
	"staticFiles": {
		"staticPath": [
			{
				"staticPath": "node_modules/@pdftron/pdfjs-express/public",
				"staticOutDir": "src/pdf-js"
			}
		],
		"watcherGlob": "**"
	}
}
